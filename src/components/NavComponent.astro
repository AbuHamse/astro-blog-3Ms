---
const navItems = [
  { href: '/', text: 'Home' },
  { href: '/mental-clarity', text: 'Mental Clarity' },
  { href: '/financial-health', text: 'Financial Health' },
  { href: '/tech-advancements', text: 'Tech Advancements' },
];
---

<nav class="bg-white shadow-md">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-2xl font-bold text-blue-600">Mind Money Machine</a>
      <ul class="flex space-x-4">
        {navItems.map((item) => (
          <li>
            <a href={item.href} class="text-gray-600 hover:text-blue-600 transition-colors">{item.text}</a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

